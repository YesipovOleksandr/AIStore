<div id="popupLogin" class="popup">
    <div class="popup_body">
        <div class="popup_content">
            <a onclick="CloseLoginModal()" class="popup_close">
                X
            </a>
            <div class="popup_header">
                <h2>Sign In</h2>
            </div>
            <div class="common_block_popup">
                <div class="block_right_popup">
                    <div onclick="externalAuth('facebook')" class="block_right_Facebook">
                        <a>Sign in with Facebook </a>
                    </div>
                    <div onclick="externalAuth('google')" class="block_right_Google">
                        <a >Sign in with Google </a>
                    </div>
                    <div onclick="externalAuth('linkedin')" class="block_right_Linkedin">
                        <a > Sign in with Linkedin</a>
                    </div>
                </div>

                <div class="block_left_popup">
                    <div class="popup_input_login">
                        <input class="emailPopUp" oninput="OnInputValidationLogin()" placeholder="Email" type="email" />
                        <p class="error_email">Enter a valid email</p>
                    </div>
                    <div class="popup_input_password">
                        <input class="passwordPopUp" oninput="OnInputValidationLoginPassword()" placeholder="Password" type="password" />
                        <p class="error_password">Enter a password</p>
                    </div>
                    <a href="#">Forgot Password? </a>
                    <button onclick="sendFormLogin()">Войти</button>
                </div>
            </div>
        </div>
    </div>
</div>